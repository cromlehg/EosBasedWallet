doctype html
html(lang='en')
  head
    meta(charset='utf-8')
  body

    .app
      .app__header
      .app__body.container
        .row
          .col-12.col-md-8
            form.card.mb-4
              .card-body
                h5.card-title.mb-4 Transfer VEST tokens
                .form-group
                  label(for='from') from
                  input#from.form-control(type='text' disabled required)
                .form-group
                  label(for='to') to
                  input#to.form-control(type='text' required)
                .form-group
                  label(for='quantity') amount
                  input#quantity.form-control(type='number' required)
                .form-group
                  label(for='memo') memo
                  input#memo.form-control(type='text' required)
                .form-group.mb-4
                  label(for='private-key') private key
                  input#private-key.form-control(type='text' required)
                .form-group
                  button#send.btn.btn-outline-secondary(type='submit') Send
                #result
          .col-12.col-md-4
            .card
              .app__sidebar.card-body
                h5.card-title.mb-4 Your account
                table.mb-4
                  tr
                    td name:
                    td(data-bind='account-name')
                  tr
                    td balance:
                    td(data-bind='account-balance')

                button.btn.btn-outline-secondary#switch-account-button Switch account

    .modal.fade#select-account-modal(tabindex='-1', role='dialog')
      form.modal-dialog(role='document')
        .modal-content
          .modal-header
            h5.modal-title Welcome to VEST wallet!
          .modal-body
            p To proceed, enter your account name
            .form-group
              input#select-account-input.form-control(type='text' required)
          .modal-footer
            button.btn.btn-outline-secondary#select-account-submit(type='submit') Submit

    .modal.fade#switch-account-modal(tabindex='-1', role='dialog')
      form.modal-dialog(role='document')
        .modal-content
          .modal-header
            h5.modal-title Switch account
          .modal-body
            p enter account name here
            .form-group
              input#switch-account-input.form-control(type='text' required)
          .modal-footer
            button.btn.btn-outline-secondary#switch-account-submit(type='submit') Submit


